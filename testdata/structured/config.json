{
  "version": "1.0.0",
  "application": {
    "name": "Ryan AI CLI",
    "description": "Advanced AI-powered command line interface",
    "author": "Ryan Development Team"
  },
  "vectorstore": {
    "provider": "chromem",
    "embedder": {
      "provider": "ollama",
      "model": "nomic-embed-text",
      "base_url": "http://localhost:11434",
      "timeout": 30000,
      "max_retries": 3,
      "backoff_base": 100
    },
    "persistence": {
      "enabled": true,
      "directory": "./data/vectorstore",
      "auto_cleanup": false
    },
    "collections": {
      "conversations": {
        "name": "chat_history",
        "description": "Stores conversation history for context retrieval",
        "chunk_size": 1000,
        "chunk_overlap": 200
      },
      "documents": {
        "name": "indexed_files",
        "description": "Stores indexed file content for semantic search",
        "chunk_size": 1500,
        "chunk_overlap": 300
      },
      "codebase": {
        "name": "source_code",
        "description": "Stores source code with function-level chunking",
        "chunk_size": 2000,
        "chunk_overlap": 100
      }
    }
  },
  "chat": {
    "providers": {
      "ollama": {
        "base_url": "http://localhost:11434",
        "default_model": "qwen3:latest",
        "timeout": 120000,
        "stream": true
      },
      "openai": {
        "api_key": "${OPENAI_API_KEY}",
        "default_model": "gpt-4",
        "timeout": 60000,
        "stream": true
      },
      "anthropic": {
        "api_key": "${ANTHROPIC_API_KEY}",
        "default_model": "claude-3-haiku",
        "timeout": 90000,
        "stream": true
      }
    },
    "memory": {
      "type": "hybrid",
      "working_memory_size": 10,
      "vector_memory_threshold": 0.7,
      "semantic_weight": 0.6,
      "recency_weight": 0.4
    },
    "tools": {
      "enabled": true,
      "registry": "builtin",
      "permission_model": "prompt_on_first_use",
      "timeout": 30000,
      "max_concurrent": 5
    }
  },
  "tui": {
    "theme": "dark",
    "colors": {
      "primary": "#00ff00",
      "secondary": "#ffff00",
      "accent": "#ff6b6b",
      "background": "#1e1e1e",
      "text": "#ffffff"
    },
    "layout": {
      "sidebar_width": 25,
      "message_padding": 2,
      "show_timestamps": true,
      "show_metadata": false
    },
    "keybindings": {
      "quit": "q",
      "help": "?",
      "toggle_sidebar": "s",
      "new_conversation": "n",
      "search": "/",
      "copy": "y"
    }
  },
  "logging": {
    "level": "info",
    "output": "console",
    "format": "structured",
    "components": {
      "vectorstore": "debug",
      "chat": "info",
      "tools": "warn",
      "tui": "error"
    }
  },
  "performance": {
    "max_memory": "1GB",
    "gc_threshold": 0.8,
    "concurrent_requests": 10,
    "cache_size": 1000,
    "index_batch_size": 100
  },
  "security": {
    "allowed_hosts": [
      "localhost",
      "127.0.0.1",
      "*.openai.com",
      "*.anthropic.com"
    ],
    "allowed_paths": [
      "~/Documents",
      "~/Projects",
      "/tmp"
    ],
    "forbidden_commands": [
      "rm -rf",
      "sudo",
      "chmod 777"
    ],
    "max_file_size": "10MB",
    "enable_sandboxing": true
  }
}
